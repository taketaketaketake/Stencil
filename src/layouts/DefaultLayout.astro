---
import '../db/client.ts';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { 
  title = "Stencil - Detroit's Local Marketplace for Handmade & Small Business Products", 
  description = "Discover unique handmade products and support Detroit small businesses at Stencil Marketplace. Shop local, authentic goods crafted by Michigan artisans and entrepreneurs.",
  image = "/placeholder-logo.png",
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Basic Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Detroit small businesses, Michigan handmade products, Shop local Detroit, Detroit marketplace, Michigan artisans, Handcrafted goods Detroit, Small business products Michigan, Local entrepreneurs Detroit, Detroit craft marketplace, Unique gifts Michigan" />
    <meta name="author" content="Stencil Marketplace" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content="Stencil" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="format-detection" content="telephone=no" />
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Stencil",
        "url": "https://shopstencil.com",
        "description": "Detroit's Local Marketplace for Handmade & Small Business Products",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://shopstencil.com/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body class="antialiased text-gray-900 bg-gray-50">
    <a href="#main" class="sr-only focus:not-sr-only px-4 py-2 bg-white text-blue-600">Skip to content</a>
    <Navbar />
    <main id="main" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>