---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const { title = "Stencil Marketplace", description = "Placeholder meta description for SEO." } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="antialiased text-gray-900 bg-gray-50">
    <a href="#main" class="sr-only focus:not-sr-only px-4 py-2 bg-white text-blue-600">Skip to content</a>
    <Navbar />
    <main id="main" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
