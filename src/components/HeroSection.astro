// src/components/HeroSection.astro
---
<section class="py-20 text-center">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-6xl md:text-8xl font-extrabold font-heading tracking-tighter mb-4">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-brand-magenta to-brand-orange">
        Find Your Vibe.
      </span>
    </h1>
    <p class="text-xl md:text-2xl text-brand-text max-w-2xl mx-auto mb-8">
      Discover unique, handcrafted goods from independent creators and artists who pour their heart into every design.
    </p>
    <a 
      href="/shop" 
      class="inline-block bg-gradient-to-r from-brand-teal to-brand-magenta text-white font-bold text-lg rounded-lg px-8 py-4 transition-transform duration-300 ease-in-out hover:scale-105 shadow-lg"
    >
      Shop Now
    </a>
  </div>
</section>
