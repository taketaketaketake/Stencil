---
// src/components/SellSteps.astro
const steps = [
  {
    number: '01',
    title: 'Create Your Shop',
    description: 'Sign up in minutes and create a beautiful, customized storefront that reflects your unique brand.',
    icon: 'M' // Placeholder for a cool icon
  },
  {
    number: '02',
    title: 'List Your Products',
    description: 'Easily upload your products with high-quality photos and compelling descriptions to attract buyers.',
    icon: 'L'
  },
  {
    number: '03',
    title: 'Start Selling',
    description: 'Reach a vibrant community of shoppers and start making money from your creative passion.',
    icon: 'S'
  }
];
---
<section class="py-20 bg-brand-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-4xl font-extrabold font-heading">Sell Your Creations</h2>
      <p class="mt-4 text-lg max-w-2xl mx-auto">
        Join our community of creators and turn your passion into a business in three simple steps.
      </p>
    </div>
    <div class="mt-12 grid md:grid-cols-3 gap-12">
      {steps.map(step => (
        <div class="text-center">
          <div class="flex items-center justify-center w-20 h-20 mx-auto mb-6 rounded-full bg-brand-teal text-white text-3xl font-bold">
            {step.number}
          </div>
          <h3 class="text-2xl font-bold font-heading mb-2">{step.title}</h3>
          <p>{step.description}</p>
        </div>
      ))}
    </div>
    <div class="mt-16 text-center">
      <a 
        href="/register" 
        class="inline-block bg-gradient-to-r from-brand-orange to-brand-magenta text-white font-bold text-lg rounded-lg px-8 py-4 transition-transform duration-300 ease-in-out hover:scale-105 shadow-lg"
      >
        Become a Seller
      </a>
    </div>
  </div>
</section>
