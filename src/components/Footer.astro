// src/components/Footer.astro
---
<footer class="bg-brand-text text-brand-bg mt-16">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      <div>
        <h3 class="text-lg font-heading font-bold text-brand-magenta uppercase tracking-wider">Shop</h3>
        <ul class="mt-4 space-y-2">
          <li><a href="/shop?category=apparel" class="hover:text-brand-teal transition-colors">Apparel</a></li>
          <li><a href="/shop?category=accessories" class="hover:text-brand-teal transition-colors">Accessories</a></li>
          <li><a href="/shop?category=home-goods" class="hover:text-brand-teal transition-colors">Home Goods</a></li>
          <li><a href="/shop?category=art" class="hover:text-brand-teal transition-colors">Art</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-heading font-bold text-brand-orange uppercase tracking-wider">Sell</h3>
        <ul class="mt-4 space-y-2">
          <li><a href="/sell" class="hover:text-brand-teal transition-colors">Sell on Stencil</a></li>
          <li><a href="/vendor-portal" class="hover:text-brand-teal transition-colors">Vendor Portal</a></li>
          <li><a href="/vendor-faq" class="hover:text-brand-teal transition-colors">Vendor FAQ</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-heading font-bold text-brand-teal uppercase tracking-wider">About</h3>
        <ul class="mt-4 space-y-2">
          <li><a href="/about" class="hover:text-brand-magenta transition-colors">Our Story</a></li>
          <li><a href="/blog" class="hover:text-brand-magenta transition-colors">Blog</a></li>
          <li><a href="/contact" class="hover:text-brand-magenta transition-colors">Contact Us</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-heading font-bold text-brand-magenta uppercase tracking-wider">Follow Us</h3>
        <div class="flex mt-4 space-x-4">
          <a href="#" class="hover:text-brand-orange transition-colors">Twitter</a>
          <a href="#" class="hover:text-brand-orange transition-colors">Instagram</a>
          <a href="#" class="hover:text-brand-orange transition-colors">Pinterest</a>
        </div>
      </div>
    </div>
    <div class="mt-12 border-t border-brand-teal pt-8 text-center">
      <p class="text-base">&copy; {new Date().getFullYear()} Stencil Marketplace. All Rights Reserved.</p>
    </div>
  </div>
</footer>
