---
// src/components/VendorCarousel.astro
const vendors = [
  { name: 'Creative Co.', logoUrl: 'https://via.placeholder.com/150/FF00FF/FFFFFF?text=CreativeCo' },
  { name: 'Artisan Alley', logoUrl: 'https://via.placeholder.com/150/FFA500/FFFFFF?text=Artisan+Alley' },
  { name: 'Modern Makers', logoUrl: 'https://via.placeholder.com/150/00CED1/FFFFFF?text=Modern+Makers' },
  { name: 'Urban Threads', logoUrl: 'https://via.placeholder.com/150/1E2A78/FFFFFF?text=Urban+Threads' },
  { name: 'Design Den', logoUrl: 'https://via.placeholder.com/150/FF00FF/FFFFFF?text=Design+Den' },
  { name: 'Craft Circle', logoUrl: 'https://via.placeholder.com/150/FFA500/FFFFFF?text=Craft+Circle' },
];
---
<section class="py-16 bg-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-extrabold font-heading text-center mb-12">Our Amazing Vendors</h2>
    <div class="relative">
      <div class="overflow-x-auto">
        <div class="flex space-x-8 p-4">
          {vendors.map(vendor => (
            <div class="flex-shrink-0 w-48 h-32 flex items-center justify-center border-2 border-brand-text rounded-lg bg-white p-4">
              <img src={vendor.logoUrl} alt={vendor.name} class="max-h-full max-w-full" />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
