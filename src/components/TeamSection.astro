---
// src/components/TeamSection.astro
const teamMembers = [
  { name: 'Alex Chen', role: 'Founder & CEO', imageUrl: 'https://source.unsplash.com/random/400x400?portrait,man' },
  { name: 'Maria Garcia', role: 'Head of Curation', imageUrl: 'https://source.unsplash.com/random/400x400?portrait,woman' },
  { name: 'Sam "The Dev" Jones', role: 'Lead Developer', imageUrl: 'https://source.unsplash.com/random/400x400?portrait,person' },
];
---
<section class="py-20 bg-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-extrabold font-heading text-center mb-12">Meet the Vibe Team</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-12 text-center">
      {teamMembers.map(member => (
        <div>
          <img class="w-48 h-48 mx-auto rounded-full border-4 border-brand-teal shadow-lg" src={member.imageUrl} alt={member.name} />
          <h3 class="mt-6 text-2xl font-bold font-heading">{member.name}</h3>
          <p class="text-brand-magenta font-semibold">{member.role}</p>
        </div>
      ))}
    </div>
  </div>
</section>
