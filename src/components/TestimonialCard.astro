---
// src/components/TestimonialCard.astro
export interface Props {
  testimonial: {
    quote: string;
    author: string;
    rating: number; // Rating out of 5
  };
}

const { testimonial } = Astro.props;
const colors = ['border-brand-magenta', 'border-brand-orange', 'border-brand-teal'];
const randomColor = colors[Math.floor(Math.random() * colors.length)];
---
<div class={`p-8 bg-white rounded-lg border-l-8 ${randomColor} shadow-lg`}>
  <div class="flex items-center mb-4">
    {[...Array(5)].map((_, i) => (
      <svg class={`w-6 h-6 ${i < testimonial.rating ? 'text-brand-orange' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.365 2.448a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.54 1.118l-3.365-2.448a1 1 0 00-1.175 0l-3.365 2.448c-.784.57-1.838-.197-1.54-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.24 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69L9.049 2.927z" />
      </svg>
    ))}
  </div>
  <p class="text-lg italic text-brand-text mb-4">"{testimonial.quote}"</p>
  <p class="font-bold font-heading text-right">- {testimonial.author}</p>
</div>
