---
// src/components/ContactSellerSupport.astro
import SectionHeading from './SectionHeading.astro';
---

<section class="py-16 bg-brand-bg">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <SectionHeading title="Still Have Questions?" />
    <p class="text-xl text-brand-text mb-8">
      Our dedicated seller support team is here to help you every step of the way. Reach out to us with any inquiries you might have.
    </p>
    <a 
      href="/contact" 
      class="inline-block bg-brand-teal text-white font-bold text-lg rounded-lg px-8 py-4 transition-transform duration-300 ease-in-out hover:scale-105 shadow-lg"
    >
      Contact Support
    </a>
  </div>
</section>