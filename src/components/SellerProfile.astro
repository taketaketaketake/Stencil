---
export interface Props {
  seller: {
    name: string;
    bio: string;
    profileImageUrl: string;
    location: string;
    social: {
      twitter: string;
      instagram: string;
    };
    about: string;
  };
}

const { seller } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-8">
  <div class="flex items-center mb-6">
    <img src={seller.profileImageUrl} alt={seller.name} class="w-24 h-24 rounded-full mr-6">
    <div>
      <h1 class="text-3xl font-bold font-heading text-brand-text">{seller.name}</h1>
      <p class="text-lg text-gray-600">{seller.bio}</p>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <h2 class="text-xl font-bold font-heading text-brand-text mb-4">About {seller.name}</h2>
      <p class="text-gray-700">{seller.about}</p>
    </div>
    <div>
      <h2 class="text-xl font-bold font-heading text-brand-text mb-4">Seller Information</h2>
      <ul class="text-gray-700">
        <li class="mb-2">
          <span class="font-semibold">Location:</span> {seller.location}
        </li>
        <li class="mb-2">
          <span class="font-semibold">Social:</span>
          <a href={seller.social.twitter} class="text-brand-text hover:underline ml-2">Twitter</a>
          <a href={seller.social.instagram} class="text-brand-text hover:underline ml-2">Instagram</a>
        </li>
      </ul>
    </div>
  </div>
</div>
